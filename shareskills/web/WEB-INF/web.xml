<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">


  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>web/WEB-INF/applicationContext.xml</param-value>
  </context-param>
  	<!-- 指定以Listener方式启动Log4j -->
	<listener> 
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class> 
	</listener>


    <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
    <!-- 设置servlet编码过滤器-->
    --<filter>
        <filter-name>Spring character encoding filter</filter-name>
        <filter-class>
            org.springframework.web.filter.CharacterEncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Spring character encoding filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- 设置跨域访问-->
    <filter>
        <filter-name>Crass Filer</filter-name>
        <filter-class>com.shareskill.utils.CrassFilter</filter-class>

    </filter>
    <filter-mapping>
        <filter-name>Crass Filer</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- 指定springmvc servlet -->
  <servlet>
  	<servlet-name>spring</servlet-name>
  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  	   <!-- 可以自定义servlet.xml配置文件的位置和名称，默认为WEB-INF目录下，名称为[<servlet-name>]-servlet.xml，如spring-servlet.xml-->
    <init-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>web/WEB-INF/spring-servlet.xml</param-value>
    </init-param>
    
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
  	<servlet-name>spring</servlet-name>
  	<url-pattern>/</url-pattern><!-- 监听所有请求 -->
  </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/showHome</welcome-file>
    </welcome-file-list>
    <!-- 设置tld位置-->
    <jsp-config>
        <taglib>
            <taglib-uri>http://www.shaareskill.com/mytaglib</taglib-uri>
            <taglib-location>web/WEB-INF/tags/shareskill.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://www.shaareskill.com/corelib</taglib-uri>
            <taglib-location>web/WEB-INF/tags/c.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>